@using Messanger.Core.Models
@model User

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	// Url для регистрации пользователя
	var registrationUrl = Url.Action("Registration", "Home");
	// Ошибки произошедшие при регистрации
	string error = ViewBag.Erorr;
}

@if (!string.IsNullOrEmpty(error))
{
	<div class="alert alert-danger">
		@error
	</div>
}


<form method="POST" action="@registrationUrl" id="form">
	<div class="form-group">
		@Html.LabelFor(x => x.NickName, "Ник")
		@Html.TextBoxFor(x=>x.NickName, new { @class = "form-control", required = "required", placeholder = "Введите Ник" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Login, "Логин")
		@Html.TextBoxFor(x => x.Login, new { @class = "form-control", required = "required", placeholder = "Введите Логин" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Password, "Пароль")
		@Html.PasswordFor(x => x.Password, new { @class = "form-control", required = "required", placeholder = "Пароль" })
	</div>
	<button type="submit" class="btn btn-primary btn-block">Зарегистрироваться</button>
</form>
